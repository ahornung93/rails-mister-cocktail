<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Cocktail Shaker</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Home', cocktails_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Create Cocktail', new_cocktail_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</nav>

<div class="d-flex justify-content-center m-3">
  <div id="large-card" class="card" style="width: 32rem;">
    <div class="card-body">
      <h2 class="card-title"><%= @cocktail.name %></h2>
      <h5 class="card-title">Ingredients</h5>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item d-flex justify-content-between"><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <% end %>
      </ul>
      <br>
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
  <% if @cocktail.image.attached? %>
    <%= cl_image_tag @cocktail.image.key, crop: :fill, class: 'large-img' %>
  <% else %>
    <%= image_tag 'cocktails_2.jpg', crop: :fill, class: 'large-img' %>
  <% end %>
</div>
